---
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<div class="tooltip">
  <slot />
  <span
    class="tooltiptext text-white/80 rounded-full border border-white/10 bg-gray-500/95"
    >{text}</span
  >
</div>

<style is:global>
  /* Tooltip container */
  .tooltip {
    position: relative;
  }

  /* Tooltip text */
  /* Tooltip text */
  .tooltip .tooltiptext {
    opacity: 0; /* Inicialmente oculto */
    width: 120px;
    color: #fff;
    text-align: center;
    padding: 5px 0;
    border-radius: 6px;
    position: absolute;
    z-index: 1;
    top: -160%;
    left: -200%;
    transition:
      opacity 0.4s ease,
      transform 0.4s ease;
    transform: translateY(-10px); /* Mueve ligeramente hacia arriba */
  }

  /* Show the tooltip text when you hover over the tooltip container */
  .tooltip:hover .tooltiptext {
    opacity: 1;
    transform: translateY(0); /* Regresa a su posici√≥n normal */
  }
</style>
