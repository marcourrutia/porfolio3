---
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<div class="tooltip">
  <slot />
  <span
    class="tooltiptext text-white/80 rounded-full border border-white/10 bg-white/5"
    >{text}</span
  >
</div>

<style is:global>
  /* Tooltip container */
  .tooltip {
    position: relative;
  }

  /* Tooltip text */
  .tooltip .tooltiptext {
    visibility: hidden;
    width: 120px;
    color: #fff;
    text-align: center;
    padding: 5px 0;
    border-radius: 6px;

    /* Position the tooltip text - see examples below! */
    position: absolute;
    z-index: 1;
    top: -125%;
    left: -55%;
  }

  /* Show the tooltip text when you mouse over the tooltip container */
  .tooltip:hover .tooltiptext {
    transition: 0.8s;
    visibility: visible;
  }
</style>
