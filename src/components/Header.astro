<header
  id="navbar"
  class="bg-white/2 fixed top-0 flex justify-center items-center p-3 w-full border-b border-white/2 transition-all duration-500 z-50"
>
  <nav class="flex flex-row gap-x-5 lg:gap-x-10 opacity-80">
    <a href="#">Inicio</a>
    <a href="#sobre-mi">Sobre Mi</a>
    <a href="#estudios">Estudios</a>
    <a href="#laboral">Experiencia</a>
  </nav>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const navbar = document.getElementById("navbar");

    if (!navbar) return;

    window.addEventListener("scroll", () => {
      if (window.scrollY > 50) {
        navbar.classList.add("backdrop-blur-md", "shadow-md");
      } else {
        navbar.classList.remove("backdrop-blur-md", "shadow-md");
      }
    });
  });
</script>
